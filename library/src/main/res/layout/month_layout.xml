<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/month_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/days_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:id="@+id/llWeekContainer">

        <include
            layout="@layout/week_1_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#c1c1c1"/>

        <include
            layout="@layout/week_2_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#c1c1c1"/>

        <include
            layout="@layout/week_3_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#c1c1c1"/>

        <include
            layout="@layout/week_4_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#c1c1c1"/>

        <include
            layout="@layout/week_5_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.01dp"
            android:background="#c1c1c1"/>

        <include
            layout="@layout/week_6_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>